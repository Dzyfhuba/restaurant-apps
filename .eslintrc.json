{
    "env": {
        "browser": true,
        "es2021": true
    },
    "overrides": [
        {
            "files": [
                "*.json",
                "src/**/*.js"
            ]
        }
    ],
    "ignorePatterns": [
        "node_modules/",
        "dist/",
        ".*.js"
    ],
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-undef": "off",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off"
    }
}